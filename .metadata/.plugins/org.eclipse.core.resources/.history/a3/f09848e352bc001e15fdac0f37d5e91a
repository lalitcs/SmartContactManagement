package com.working.amarjeet.Todo;
import org.apache.poi.ss.usermodel.*;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.util.Iterator;

public class App {

    public static void main(String[] args) {
        try {
            // Step 1: Load the Excel file
            FileInputStream file = new FileInputStream(new File("C:/Users/lalit/Downloads/Assignment_Timecard.xlsx"));
            Workbook workbook = WorkbookFactory.create(file);
            sysout

            // Step 2: Get the first sheet
            Sheet sheet = workbook.getSheetAt(0);

            // Step 3: Process the data and print results
            analyzeEmployeeData(sheet);

            // Step 4: Close the workbook
            workbook.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private static void analyzeEmployeeData(Sheet sheet) {
        // Assuming the structure of the Excel sheet
        int nameColumnIndex = 0;
        int positionColumnIndex = 1;
        int dateColumnIndex = 2;
        int hoursWorkedColumnIndex = 3;

        Iterator<Row> rowIterator = sheet.iterator();

        // Skip the header row if it exists
        if (rowIterator.hasNext()) {
            rowIterator.next();
        }

        // Process the data
        while (rowIterator.hasNext()) {
            Row row = rowIterator.next();

            String name = row.getCell(nameColumnIndex).getStringCellValue();
            String position = row.getCell(positionColumnIndex).getStringCellValue();
            String date = row.getCell(dateColumnIndex).getStringCellValue();
            double hoursWorked = row.getCell(hoursWorkedColumnIndex).getNumericCellValue();

            // Perform the required analyses
            // Implement your logic for a), b), and c) here

            // Print the results to the console
            System.out.println("Name: " + name + ", Position: " + position);
        }
    }
}
